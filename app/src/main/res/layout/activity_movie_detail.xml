<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MoviInfoActivity"
        tools:ignore="RtlHardcoded">

    <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@mipmap/ic_movie_default"
                    android:scaleType="fitXY"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription"/>

            <ImageView
                    android:id="@+id/iv_movie"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="96dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_movie_default"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/tv_director"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:padding="2dp"
                    android:text="导演：卡梅隆"
                    android:textColor="#fff"
                    app:layout_constraintLeft_toRightOf="@+id/iv_movie"
                    app:layout_constraintTop_toTopOf="@+id/iv_movie"/>

            <TextView
                    android:id="@+id/tv_actor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:padding="2dp"
                    android:text="演员：卡梅隆"
                    android:textColor="#fff"
                    app:layout_constraintLeft_toRightOf="@+id/iv_movie"
                    app:layout_constraintTop_toBottomOf="@+id/tv_director"/>

            <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:padding="2dp"
                    android:text="类型:剧情"
                    android:textColor="#fff"
                    app:layout_constraintLeft_toRightOf="@+id/iv_movie"
                    app:layout_constraintTop_toBottomOf="@+id/tv_actor"/>

            <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:padding="2dp"
                    android:text="上映日期：1997"
                    android:textColor="#fff"
                    app:layout_constraintLeft_toRightOf="@+id/iv_movie"
                    app:layout_constraintTop_toBottomOf="@+id/tv_type"/>


            <TextView
                    android:id="@+id/tv_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:padding="2dp"
                    android:text="制片国家/地区：美国"
                    android:textColor="#fff"
                    app:layout_constraintLeft_toRightOf="@+id/iv_movie"
                    app:layout_constraintTop_toBottomOf="@+id/tv_date"/>


            <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/left_line"
                    android:drawablePadding="4dp"
                    android:padding="8dp"
                    android:text="评分：10分"
                    android:textColor="#333"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_head"/>

            <RatingBar
                    android:id="@+id/rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="9.6"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_rating"/>

            <TextView
                    android:id="@+id/tv_desc1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/left_line"
                    android:drawablePadding="4dp"
                    android:lineSpacingExtra="2dp"
                    android:paddingLeft="8dp"
                    android:text="剧情简介....."
                    android:textColor="#333"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/rating_bar"/>

            <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:padding="8dp"
                    android:text="....."
                    app:layout_constraintTop_toBottomOf="@+id/tv_desc1"/>

            <TextView
                    android:id="@+id/tv_actorPic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:drawableLeft="@drawable/left_line"
                    android:drawablePadding="4dp"
                    android:lineSpacingExtra="2dp"
                    android:text="导演/演员"
                    android:textColor="#333"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_desc"/>


            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_actor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_actorPic">


            </androidx.recyclerview.widget.RecyclerView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    app:fabSize="mini"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_rating"
                    app:layout_constraintRight_toRightOf="parent"
                    app:srcCompat="@mipmap/ic_share"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

