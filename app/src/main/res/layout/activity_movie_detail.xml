<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MovieInfoActivity"
        tools:ignore="RtlHardcoded">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="visible">

        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/toolbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:contentScrim="?attr/colorPrimary"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">


                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <androidx.appcompat.widget.Toolbar
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:id="@+id/toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            app:layout_collapseMode="pin"
                            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

                    <ImageView

                            android:id="@+id/iv_movie"
                            android:layout_width="120dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="@dimen/xx"
                            android:layout_marginTop="56dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/ic_movie_default"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                            android:id="@+id/tv_director"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:padding="2dp"
                            android:text="导演：卡梅隆"
                            android:textColor="@color/color_white"
                            app:layout_constraintLeft_toRightOf="@+id/iv_movie"
                            app:layout_constraintTop_toTopOf="@+id/iv_movie"/>

                    <TextView
                            android:id="@+id/tv_actor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:padding="2dp"
                            android:text="演员：卡梅隆"
                            android:textColor="@color/color_white"
                            app:layout_constraintLeft_toRightOf="@+id/iv_movie"
                            app:layout_constraintTop_toBottomOf="@+id/tv_director"/>

                    <TextView
                            android:id="@+id/tv_genres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:padding="2dp"
                            android:text="类型:剧情"
                            android:textColor="@color/color_white"
                            app:layout_constraintLeft_toRightOf="@+id/iv_movie"
                            app:layout_constraintTop_toBottomOf="@+id/tv_actor"/>

                    <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:padding="2dp"
                            android:text="上映日期：1997"
                            android:textColor="@color/color_white"
                            app:layout_constraintLeft_toRightOf="@+id/iv_movie"
                            app:layout_constraintTop_toBottomOf="@+id/tv_genres"/>


                    <TextView
                            android:id="@+id/tv_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:padding="2dp"
                            android:text="制片国家/地区：美国"
                            android:textColor="@color/color_white"
                            app:layout_constraintLeft_toRightOf="@+id/iv_movie"
                            app:layout_constraintTop_toBottomOf="@+id/tv_date"/>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                <TextView
                        android:id="@+id/tv_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/left_line"
                        android:drawablePadding="4dp"
                        android:padding="8dp"
                        android:text="评分：10分"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_big"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                <RatingBar
                        android:background="@color/color_white"
                        android:isIndicator="true"
                        android:id="@+id/rating_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:rating="2.5"
                        android:numStars="5"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_rating"/>

                <TextView
                        android:id="@+id/tv_desc1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/left_line"
                        android:drawablePadding="4dp"
                        android:lineSpacingExtra="2dp"
                        android:text="剧情简介....."
                        android:padding="@dimen/x"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_big"
                        app:layout_constraintTop_toBottomOf="@+id/rating_bar"/>

                <TextView
                        android:textSize="@dimen/font_middle"
                        android:background="@color/color_white"
                        android:textColor="@color/color_black"
                        android:id="@+id/tv_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="2dp"
                        android:padding="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_desc1"/>


                <TextView
                        android:id="@+id/tv_actors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/left_line"
                        android:drawablePadding="4dp"
                        android:lineSpacingExtra="2dp"
                        android:text="演职员"
                        android:padding="@dimen/x"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_big"
                        app:layout_constraintTop_toBottomOf="@+id/tv_content"/>


                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_actors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/tv_actors"/>


                <TextView
                        android:id="@+id/tv_video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/left_line"
                        android:drawablePadding="4dp"
                        android:lineSpacingExtra="2dp"
                        android:text="预告片"
                        android:padding="@dimen/x"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_big"
                        app:layout_constraintTop_toBottomOf="@+id/rv_actors"/>


                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_trailers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/tv_video"/>

                <TextView
                        android:id="@+id/tv_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/left_line"
                        android:drawablePadding="4dp"
                        android:lineSpacingExtra="2dp"
                        android:text="热评"
                        android:padding="@dimen/x"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_big"
                        app:layout_constraintTop_toBottomOf="@+id/rv_trailers"/>


                <com.steven.movieapp.widget.WrapRecyclerView
                        android:id="@+id/rv_comments"
                        android:layout_width="match_parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/tv_comment">


                </com.steven.movieapp.widget.WrapRecyclerView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                app:layout_anchor="@id/app_bar"
                app:fabCustomSize="48dp"
                app:layout_anchorGravity="bottom|end"
                app:srcCompat="@mipmap/ic_share"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <include layout="@layout/load_view"/>
</RelativeLayout>




