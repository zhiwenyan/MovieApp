<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:paddingLeft="@dimen/x"
              android:layout_width="wrap_content"
              android:background="@color/color_white"
              android:layout_height="wrap_content">


    <com.steven.movieapp.widget.RoundCornerImageView
            android:layout_marginTop="@dimen/y_half"
            android:src="@mipmap/ic_movie_default"
            android:id="@+id/iv_actor"
            android:layout_width="120dp"
            app:radius="2dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:layout_height="136dp"/>

    <TextView
            android:padding="@dimen/x_half"
            android:layout_gravity="center_horizontal"
            android:text="迪伦·奥布莱恩"
            android:textColor="@color/color_black"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</LinearLayout>