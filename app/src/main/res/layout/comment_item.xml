<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        tools:ignore="RtlHardcoded">

    <ImageView
            android:layout_marginLeft="@dimen/yy"
            android:layout_marginTop="@dimen/xx"
            android:src="@drawable/ic_menu_camera"
            android:id="@+id/avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

    <TextView
            android:maxLength="5"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="@dimen/yy"
            android:paddingLeft="@dimen/x"
            app:layout_constraintLeft_toRightOf="@+id/avatar"
            android:textColor="@color/color_blue"
            android:text="懒人"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <TextView
            android:paddingTop="@dimen/yy"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/name"
            android:text="2019-01-01"
            android:id="@+id/pubdates"
            android:paddingLeft="@dimen/x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <TextView
            android:paddingRight="@dimen/xx"
            android:paddingTop="@dimen/yy"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="有用"
            android:textColor="@color/color_blue"
            android:id="@+id/useful"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <TextView
            android:paddingRight="@dimen/x_half"
            android:paddingTop="@dimen/yy"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/useful"
            android:text="100"
            android:textColor="@color/color_blue"
            android:id="@+id/useful_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <com.steven.movieapp.widget.CollapsibleTextView
            android:id="@+id/content"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:paddingLeft="@dimen/xx"
            android:paddingRight="@dimen/xx"
            android:paddingTop="@dimen/y"
            android:paddingBottom="@dimen/yy"
            android:textColor="@color/color_black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:collapsedText="【展开】"
            android:text="我喜欢我喜欢我喜欢我喜欢我喜欢我喜欢"
            android:layout_width="match_parent"
            app:collapsedLines="3"
            app:expandedText="【收起】"
            app:suffixColor="@color/color_blue"
            android:layout_height="wrap_content"/>

